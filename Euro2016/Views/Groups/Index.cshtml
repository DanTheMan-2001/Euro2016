@model Euro2016.Models.GroupViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Add Group", "Add", "Groups", new { area = "" }, new { @class = "btn btn-default" })
@if (TempData["Message"] != null)
{
   
    <div class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Warning!</strong> @TempData["Message"]
    </div>
}

<table class="dataTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Group Name</th>
            <th>Creation Date</th>
            <th>Creation Source</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.Groups)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.Name</td>
                <td>@group.CreationDate</td>
                <td>@group.CreationSource</td>
                <td align="center">
                    @Html.ActionLink("Edit", "Edit", "Groups", new { id = group.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Groups", new { id = group.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>